<div class="col-inner">
  <div class="container">
    <div class="box-container mb">
      <div class="box-header">
        <h2>Equipos</h2>
      </div>
      <div class="box-main">
        <table class="primary-table">
          <thead>
            <tr>
              <th>Token</th>
              <th>Equipo</th>
              <th>Capit√°n</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
          {{#each participants}}
            <tr>
              <td>{{token}}</td>
              <td>
                {{#if team._id}}
                <a href="#equipo/{{team.url}}">
                  <span class="img" style="background-image:url('https://www.somosfut.com/team/{{team._id}}/avatar');"></span>
                  {{team.name}}
                </a>
                {{/if}}
              </td>
              <td>
                {{#if team._id}}
                <a href="#jugador/{{team.admins.0.url}}">
                  <span class="img" style="background-image:url('https://www.somosfut.com/user/{{team.admins.0._id}}/avatar');"></span>
                  {{team.admins.0.name}} {{team.admins.0.lastnameFather}}
                </a>
                {{/if}}
              </td>
              <td>
                {{#if team._id}}
                {{team.admins.0.email}}
                {{/if}}
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>