<div class="col-inner">
  <div class="box-container mb">
    <div class="box-header">
      <h3>Tabla de Posiciones</h3>
      <div class="actions">
      
        {{#if gposel}}
          <select name="opsSel" style="margin-left : 3px;height: 24px;padding: 5px 20px 5px 8px;font-size: 10px;"><option value="all">General</option>
          {{#if showSel}}<option value="gpo" selected="selected">Por Grupo</option>{{/if}}
          <option value="byPlayer" >Goleadores</option>
          <option value="byPasses">Pases</option>
          <option value="byFouls">Expulsiones</option>
          <option value="byYells">Amonestaciones</option>
          </select>
        {{else}}
          <select name="opsSel" style="margin-left : 3px;height: 24px;padding: 5px 20px 5px 8px;font-size: 10px;"><option value="all">General</option>
          {{#if showSel}}<option value="gpo">Por Grupo</option>{{/if}}
          <option value="byPlayer" >Goleadores</option>
          <option value="byPasses">Pases</option>
          <option value="byFouls">Expulsiones</option>
          <option value="byYells">Amonestaciones</option>
          </select>
        {{/if}}
      
      </div>
    </div>
    <div class="box-main">
      <div class="primary-table-wrapper">
         <table class="primary-table">
    <thead>
    {{#if sHead}}
    
      <tr>
        <th>Pos</th>
        <th>Equipo</th>
        <th>JJ</th>
        <th>JG</th>
        <th>JE</th>
        <th>JP</th>
        <th>GF</th>
        <th>GC</th>
        <th>DG</th>
        <th>PTS</th>
      </tr>
    
   {{/if}}
   </thead>
    <tbody>
      {{#each table}}
      
         {{#if isheader}}
         <tr>
          <td colspan="10" align="center" class="group-name">{{name}}</td>
          </tr>
         <thead>
          <tr>
            <th>Pos</th>
            <th>Equipo</th>
            <th>JJ</th>
            <th>JG</th>
            <th>JE</th>
            <th>JP</th>
            <th>GF</th>
            <th>GC</th>
            <th>DG</th>
            <th>PTS</th>
          </tr>
        </thead>
        {{else}}
        <tr>
          <td><b>{{cntr}}</b></td>
          <td>
            <a href="#equipo/{{team.url}}" >
              <span class="img" style="background-image:url('https://www.somosfut.com/team/{{team._id}}/avatar')"></span>
              {{team.name}}
            </a>
          </td>
          <td>{{matches}}</td>
          <td>{{wins}}</td>
          <td>{{ties}}</td>
          <td>{{loses}}</td>
          <td>{{goalsScored}}</td>
          <td>{{goalsReceived}}</td>
          <td>{{math goalsScored '-' goalsReceived}}</td>
          <td><b>{{points}}</b></td>
        </tr>
        {{/if}}
      
      {{/each}}
    </tbody>
  </table>
      </div>
    </div>
  </div>
</div>
