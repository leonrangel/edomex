<div class="col-inner">
  <div class="box-container mb">
    <div class="box-header">
      <h2>Resultados del partido</h2>
    </div>
    <form method="post">
      <div class="box-main">
        <div class="match-statistics">
          <div class="team">
            <div class="inner">
              <div class="section">
                <div class="team-extract">
                  <span class="img" style="background-image:url('https://www.somosfut.com/team/{{match.teamA._id}}/avatar');"></span>
                  <div class="team-details">
                    <h4 class="name">{{match.teamA.name}}</h4>
                    <input type="text"
                           name="goalsA"
                           class="small goals"
                           data-validator-required
                           data-validator-integer
                           placeholder="Goles">
                    <input type="text"
                           name="yCardsA"
                           class="small goals"
                           data-validator-required
                           data-validator-integer
                           placeholder="Amonestados">
                    <input type="text"
                           name="rCardsA"
                           class="small goals"
                           data-validator-required
                           data-validator-integer
                           placeholder="Expulsados">
                  </div>
                </div>
              </div>
              <div class="section">
                <div class="head">
                  <h6><b>Goles</b></h6>
                  <div class="actions">
                  </div>
                </div>
                <ul class="players goalsA">
                </ul>
              </div>
              <div class="section">
                <div class="head">
                  <h6><b>Amonestados</b></h6>
                  <div class="actions">
                  </div>
                </div>
                <ul class="players yCardsA">
                </ul>
              </div>
              <div class="section">
                <div class="head">
                  <h6><b>Expulsados</b></h6>
                  <div class="actions">
                  </div>
                </div>
                <ul class="players rCardsA">
                </ul>
              </div>
              <div class="section">
                <div class="head">
                 <h6><b>Puntos Extra (+ / -)</b></h6>
                  <div class="actions">
                    <br>
                    <input class="small " style="width:150px;" type="number" name="dynPointsA" min="-50" max="50" step="1" placeholder="Número de puntos (+ / -)" value="{{match.results.dynPointsA}}"> </br> 
                    <input class="small " style="width:150px;" type="text" name="dynPointsStrA" placeholder="Motivo"  value="{{match.results.dynPointsStrA}}" >
                  </div>
                </div>
                <ul class="players rCardsA">
                </ul>
              </div>
