<div class="modal fade">
  <div class="modal-dialog register-user-modal">
    <div class="modal-content">
      <div class="modal-body">
        <!-- Content -->
        <form id="form.tournament" class="user-form" method="post">
          <div class="header">
            <h2>Registrar Torneo</h2>
          </div>
          <div class="content">
            <div class="form-section no-border">
              <div class="label">
                <label for="name">Nombre: <span class="rqd">*</span></label>
              </div>
              <div class="main">
                <input type="text" id="name" name="name"
                  placeholder="Nombre del Torneo"
                  data-validator-required
                  data-validator-minlength="3"
                  data-validator-maxlength="30">
              </div>
            </div>
            <div class="form-section no-border">
              <div class="label">
                <label for="name">Número de Equipos: <span class="rqd">*</span></label>
              </div>
              <div class="main">
                <input type="text" id="slots" name="slots"
                  placeholder="Ejemplo: 10"
                  data-validator-required
                  data-validator-integer>
              </div>
            </div>
            <div class="form-section no-border">
              <div class="label">
                <label for="password">Tipo de Torneo: <span class="rqd">*</span></label>
              </div>
              <div class="main">
                <select name="type" data-validator-required>
                  <option value="-" 
                          disabled="disabled"
                          selected="selected">Seleccione una opción</option>
                  <option value="liga">Liga</option>
                  <option value="eliminiacion">Eliminación Directa</option>
                </select>
              </div>
            </div>
            <div class="form-section no-border">
              <div class="label">
                <label for="startDate">Fechas de Torneo: <span class="rqd">*</span></label>
              </div>
              <div class="main input-daterange">
                <input type="text" name="startDate"
                       placeholder="Fecha de Arranque"
                       data-validator-required />
                <br />
                <br />
                <input type="text" name="endDate" 
                       placeholder="Fecha de Cierre"
                       data-validator-required />
              </div>
            </div>
          </div>
          <div class="footer">
            <input type="submit"
                   value="Registrar"
                   class="btn btn-primary btn-medium submit">
            <div class="clr"></div>
          </div>
        </form>
        <!-- / Content -->
      </div>
    </div>
  </div>
</div>