<div class="modal fade">
  <div class="modal-dialog register-user-modal">
    <div class="modal-content">
      <div class="modal-body">
        <!-- Content -->
        <form class="user-form" method="post">
          <div class="header">
            <h2>Crear Equipo</h2>
          </div>
          <div class="content">
            <div class="form-section no-border">
              <div class="label">
                <label for="email">Nombre del Equipo: <span class="rqd">*</span></label>
              </div>
              <div class="main">
                <input type="text" 
                       name="name"
                       placeholder="Nombre del Equipo"
                       data-validator-required>
              </div>
            </div>
            <div class="form-section no-border">
              <div class="label">
                <label for="" 
                  class="hasTip"
                  title="En esta dirección podras consultar tu perfil público de equipo somosfut.com/#equipo/ACCESO">Acceso de Perfil: <span class="rqd">*</span>
                </label>
              </div>
              <div class="main">
                <input type="text" 
                       name="url"
                       placeholder="Ejemplo: somosfut-fc"
                       data-validator-required
                       data-validator-string>
              </div>
            </div>
          </div>
          <div class="footer">
            <input type="submit"
                   name="submit-team"
                   value="Crear Equipo"
                   class="btn btn-primary btn-medium submit">
            <div class="clr"></div>
          </div>
        </form>
        <!-- / Content -->
      </div>
    </div>
  </div>
</div>