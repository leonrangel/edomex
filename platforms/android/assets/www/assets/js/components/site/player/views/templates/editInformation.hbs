<div class="wrapper">
  <div class="cols-16">
    <div class="col col-11">
      <div class="col-inner">
        <div class="box-container mb">
          <div class="box-header">
            <h3>Datos del Jugador</h3>
          </div>
          <div class="box-main">
            <form action="#" method="post">
              <div class="information-list">
                <ul>
                  <li class="w-counter">
                    <h5>Nombre(s)</h5><span class="rqd">*</span>
                    <span class="counter">
                      <input type="text" 
                             name="info[name]"
                             value="{{name}}"
                             data-validator-required>
                    </span>
                  </li>
                  <li class="w-counter">
                    <h5>Apellido Paterno</h5><span class="rqd">*</span>
                    <span class="counter">
                      <input type="text" 
                             name="info[lastnameFather]"
                             value="{{lastnameFather}}"
                             data-validator-required>
                    </span>
                  </li>
                  <li class="w-counter">
                    <h5>Apellido Materno</h5><span class="rqd">*</span>
                    <span class="counter">
                      <input type="text" 
                             name="info[lastnameMother]"
                             value="{{lastnameMother}}"
                             data-validator-required>
                    </span>
                  </li>
                  <li class="w-counter">
                    <h5>Género</h5><span class="rqd">*</span>
                    <span class="counter">
                      <select name="info[gender]" data-validator-required>
                        <option value="-" 
                                disabled="disabled"
                                selected="selected">Seleccione una opción</option>
                        <option value="male">Masculino</option>
                        <option value="female">Femenino</option>
                      </select>
                    </span>
                  </li>
                  <li class="w-counter">
                    <h5>Posición</h5><span class="rqd">*</span>
                    <span class="counter">
                      <select name="info[position]" data-validator-required>
                        <option value="-"  disabled="disabled" selected="selected">Seleccione una opción</option>
                        <option value="Delantero">Delantero</option>
                        <option value="Portero">Portero</option>
                        <option value="Defensa">Defensa</option>
                        <option value="Medio">Medio</option>
                        <option value="Director Técnico">Director Técnico</option>
                      </select>
                    </span>
                  </li>
                  <li class="w-counter">
                    <h5>Fecha de nacimiento</h5><span class="rqd">*</span>
                    <span class="counter">
                      <div class="birth-data-selects">
