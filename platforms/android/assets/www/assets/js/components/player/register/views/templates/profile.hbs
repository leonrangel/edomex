<div class="first-login-complete-profile">
  <div class="wrapper">
    <div class="cols-16">
      <div class="col col-3"></div>
      <div class="col col-10">
        <div class="col-inner">
          <div class="title">
            <h1>¡Bienvenido {{name}} {{lastnameFather}}!</h1>
            <p>Por favor completa tu perfil de jugador.</p>
          </div>
          <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="first-login-profile-form">
              <label class="upload-avatar-button">
                <i class="i user-icon-gray"></i>
                <span>Sube tu foto</span>
                <span class="hidden"><input name="avatar" type="file"></span>
              </label>
              <div class="content">
                <div class="cols-12">
                  <div class="col col-6 alpha omega">
                    <div class="col-inner">
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">Género: <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <select name="info[gender]" data-validator-required>
                            <option value="-" 
                                    disabled="disabled"
                                    selected="selected">Seleccione una opción</option>
                            <option value="male">Masculino</option>
                            <option value="female">Femenino</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">Estatura: (cm) <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <input type="text" 
                                 name="info[stature]"
                                 value="{{info.stature}}"
                                 placeholder="Ejemplo: 170"
                                 data-validator-required
                                 data-validator-integer>
                        </div>
                      </div>
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">Posición: <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <select name="info[position]" data-validator-required>
                            <option value="-" 
                                    disabled="disabled"
                                    selected="selected">Seleccione una opción</option>
                            <option value="Delantero">Delantero</option>
                            <option value="Portero">Portero</option>
                            <option value="Defensa">Defensa</option>
                            <option value="Medio">Medio</option>
                            <option value="Director Técnico">Director Técnico</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">País de nacimiento: <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <select name="info[country]" data-validator-required>
                            <option value="-" 
                                    disabled="disabled"
                                    selected="selected">Seleccione una opción</option>
                            <option value="México">México</option>
                            <option value="USA">Estados Unidos de America</option>
                            <option value="Brasil">Brasil</option>
                            <option value="Argentina">Argentina</option>
                            <option value="Otro">Otro</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">Apodo: <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <input type="text" 
                                 name="info[nickname]"
                                 value="{{info.nickname}}"
                                 placeholder="Ejemplo: Chicharito"
                                 data-validator-required
                                 data-validator-string>
                        </div>
                      </div>
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="mobile">Teléfono celular: (Opcional)</label>
                          <p>Recibe notificaciones en tu celular.</p>
                        </div>
                        <div class="main">
                          <input type="text" id="mobile" name="mobile" placeholder="(55) 5555-5555">
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col col-6 alpha omega">
                    <div class="col-inner">
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">Pierna hábil: <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <select name="info[profile]" data-validator-required>
                            <option value="-" 
                                    disabled="disabled"
                                    selected="selected">Seleccione una opción</option>
                            <option value="Zurdo">Zurdo</option>
                            <option value="Diestro">Diestro</option>
                            <option value="Ambidiestro">Ambidiestro</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">Peso: (kg) <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <input type="text"
                                 name="info[weigth]"
                                 value="{{info.weigth}}"
                                 placeholder="Ejemplo: 65"
                                 data-validator-required
                                 data-validator-integer>
                        </div>
                      </div>
                      <div class="form-section no-border">
                        <div class="label">
                          <label for="">Número de playera: <span class="rqd">*</span></label>
                        </div>
                        <div class="main">
                          <input type="text"
                                 name="info[number]"
                                 value="{{info.number}}"
                                 placeholder="Ejemplo: 7"
                                 data-validator-required
                                 data-validator-integer>
                        </div>
                      </div>
