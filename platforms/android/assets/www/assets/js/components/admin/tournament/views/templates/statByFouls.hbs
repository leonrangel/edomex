<div class="col-inner">
  <div class="box-container mb">
    <div class="box-header">
      <h3>Tabla de Posiciones</h3>
      <div class="actions">
        <select name="opsSel" style="margin-left : 3px;height: 24px;padding: 5px 20px 5px 8px;font-size: 10px;">
          <option value="all">General</option>
          {{#if showSel}}<option value="gpo">Por Grupo</option>{{/if}}
          <option value="byPlayer">Goleadores</option>
          <option value="byPasses">Pases</option>
          <option value="byFouls" selected="selected">Expulsiones</option>
          <option value="byYells">Amonestaciones</option>
        </select>
      </div>
    </div>
    <div class="box-main">
      <div class="primary-table-wrapper">
         <table class="primary-table">
    <thead>
  
      <tr>
        <th>Pos</th>
        <th>Nombre</th>
        <th>Equipo</th>
        <th><i class="i red-card"></th>
      </tr>

   </thead>
    <tbody>
      {{#each fouls}}
      
        <tr>
          <td><b>{{cntr}}</b></td>
          <td style="width : auto;">
            
              <span class="img" style="background-image:url('https://www.somosfut.com/user/{{id}}/avatar');"></span>
              {{name}}
            
          </td>
          <td>
            <a href="#equipo/{{team.url}}">
              <span class="img" style="background-image:url('https://www.somosfut.com/team/{{team._id}}/avatar');"></span>
              {{team.name}}
            </a>
          </td>
          <td>{{fouls}}</td>
        </tr>
      
      {{/each}}
    </tbody>
  </table>
      </div>
    </div>
  </div>
</div>